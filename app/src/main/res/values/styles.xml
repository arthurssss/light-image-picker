<resources>

  <style name="Theme.LightImagePicker.Button" parent="Widget.AppCompat.Button.Small">
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:textColor">@color/light_image_picker_button_text_inverse_selector</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Theme.LightImagePicker.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
    <item name="colorControlNormal">@color/light_image_picker_window_background</item>
    <item name="colorControlActivated">?attr/colorAccent</item>
  </style>

  <style name="Theme.LightImagePicker" parent="Theme.LightImagePicker.Base">
  </style>

  <style name="Theme.LightImagePicker.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/light_image_picker_primary</item>
    <item name="colorPrimaryDark">@color/light_image_picker_primary_dark</item>
    <item name="colorAccent">@color/light_image_picker_accent</item>

    <item name="buttonStyle">@style/Theme.LightImagePicker.Button</item>
  </style>

</resources>
